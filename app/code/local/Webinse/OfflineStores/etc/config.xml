<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Webinse_OfflineStores>
            <version>1.0.1</version>
        </Webinse_OfflineStores>
    </modules>
    <frontend>
        <webinseofflinestores>
            <use>standard</use>
            <args>
                <module>Webinse_OfflineStores</module>
                <frontName>offlinestores</frontName>
            </args>
        </webinseofflinestores>
    </frontend>
    <global>
        <resources>
            <webinseofflinestores_setup>
                <setup>
                    <module>Webinse_OfflineStores</module>
                    <class>Webinse_OfflineStores_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </webinseofflinestores_setup>
            <offlinestores_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </offlinestores_read>
            <offlinestores_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </offlinestores_write>
        </resources>
        <models>
            <webinseofflinestores>
                <class>Webinse_OfflineStores_Model</class>
                <resourceModel>webinseofflinestores_resource</resourceModel>
            </webinseofflinestores>
            <webinseofflinestores_resource>
                <class>Webinse_OfflineStores_Model_Resource</class>
                <entities>
                    <table_offlinestores>
                        <table>webinse_offlinestores</table>
                    </table_offlinestores>
                    <attribute_additional>
                        <table>webinse_attribute</table>
                    </attribute_additional>
                    <offlinestores_product>
                        <table>webinse_offlinestores_product</table>
                    </offlinestores_product>
                    <attribute_website>
                        <table>webinse_attribute_website</table>
                    </attribute_website>
                </entities>
            </webinseofflinestores_resource>
        </models>
        <helpers>
            <webinseofflinestores>
                <class>Webinse_OfflineStores_Helper</class>
            </webinseofflinestores>
        </helpers>
        <blocks>
            <webinseofflinestores>
                <class>Webinse_OfflineStores_Block</class>
            </webinseofflinestores>
        </blocks>
        <events>
            <controller_front_init_routers>
                <observers>
                    <webinseofflinestores>
                        <class>Webinse_OfflineStores_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </webinseofflinestores>
                </observers>
            </controller_front_init_routers>
        </events>
    </global>
    <admin>
        <routers>
            <webinseofflinestores_admin>
                <use>admin</use>
                <args>
                    <module>Webinse_OfflineStores</module>
                    <frontName>webinseofflinestores_admin</frontName>
                </args>
            </webinseofflinestores_admin>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <webinseofflinestores module="webinseofflinestores">
                <title>Offline Stores</title>
                <sort_order>88</sort_order>
                <children translate="title" module="webinseofflinestores">
                    <webinseofflinestores_add translate="title" module="webinseofflinestores"><!-- this is the submenu item -->
                        <title>Add Offline Store</title>
                        <action>webinseofflinestores_admin/adminhtml_offlinestores</action>
                        <sort_order>20</sort_order>
                    </webinseofflinestores_add>
                    <webinseofflinestores_view translate="title" module="webinseofflinestores"><!-- this is the submenu item -->
                        <title>View Offline Stores</title>
                        <action>webinseofflinestores_admin/adminhtml_offlinestores</action>
                        <sort_order>10</sort_order>
                    </webinseofflinestores_view>
                    <webinseofflinestores_preferences translate="title" module="webinseofflinestores"><!-- this is the submenu item -->
                        <title>Settings</title>
                        <action>webinseofflinestores_admin/adminhtml_preferences</action>
                        <sort_order>30</sort_order>
                    </webinseofflinestores_preferences>
                </children>
            </webinseofflinestores>
        </menu>
        <translate>
            <modules>
                <Webinse_OfflineStores>
                    <files>
                        <default>Webinse_OfflineStores.csv</default>
                    </files>
                </Webinse_OfflineStores>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <adminhtml_offlinestores>
                                            <title>Add Offline Store</title>
                                        </adminhtml_offlinestores>
                                        <adminhtml_view>
                                            <title>View Offline Stores</title>
                                        </adminhtml_view>
                                        <adminhtml_preferences>
                                            <title>Settings</title>
                                        </adminhtml_preferences>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <webinseofflinestores>
                    <file>webinseofflinestores.xml</file>
                </webinseofflinestores>
            </updates>
        </layout>
        <!--<events>
            <adminhtml_widget_container_html_before>
                <observers>
                    <webinseofflinestores>
                        <class>Webinse_OfflineStores_Model_Observer</class>
                        <method>addButtonTest</method>
                    </webinseofflinestores>
                </observers>
            </adminhtml_widget_container_html_before>
        </events>-->
    </adminhtml>
</config>