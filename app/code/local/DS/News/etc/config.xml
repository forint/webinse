<?xml version="1.0"?>
<config>
    <modules>
        <DS_News>
            <version>0.0.3</version>
        </DS_News>
    </modules>
    <frontend>
        <layout>
            <updates>
                <dsnews>
                    <file>ds_news.xml</file>
                </dsnews>
            </updates>
        </layout>
        <routers>
            <dsnews>
                <use>standard</use>
                <args>
                    <module>DS_News</module>
                    <frontName>news</frontName>
                </args>
            </dsnews>
        </routers>
        <translate>
            <modules>
                <DS_News>
                    <files>
                        <default>DS_News.csv</default>
                    </files>
                </DS_News>
            </modules>
        </translate>
    </frontend>
    <global>
        <install>
            <date/>
        </install>
        <resources>
            <dsnews_setup>
                <setup>
                    <module>DS_News</module>
                </setup>
            </dsnews_setup>
        </resources>
        <models>
            <dsnews>
                <class>DS_News_Model</class>
                <resourceModel>dsnews_resource</resourceModel>
            </dsnews>
            <dsnews_resource>
                <class>DS_News_Model_Resource</class>
                <entities>
                    <table_categories>
                        <table>ds_news_categories</table>
                    </table_categories>
                    <table_news>
                        <table>ds_news_entities</table>
                    </table_news>
                </entities>
            </dsnews_resource>
            <dsn>
                <class>DS_News_Model</class>
            </dsn>
        </models>
        <blocks>
            <dsnews>
                <class>DS_News_Block</class>
            </dsnews>
        </blocks>
        <helpers>
            <dsnews>
                <class>DS_News_Helper</class>
            </dsnews>
        </helpers>
        <events>
            <controller_front_init_routers>
                <observers>
                    <dsnews>
                        <class>DS_News_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </dsnews>
                </observers>
            </controller_front_init_routers>
        </events>
    </global>
    <admin>
        <routers>
            <dsnews_admin>
                <use>admin</use>
                <args>
                    <module>DS_News</module>
                    <frontName>dsnews_admin</frontName>
                </args>
            </dsnews_admin>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <dsnews module="dsnews">
                <title>News</title>
                <sort_order>77</sort_order>
                <children  translate="title" module="dsnews">
                    <dsnews_news>
                        <title>News</title>
                        <sort_order>10</sort_order>
                        <action>dsnews_admin/adminhtml_news</action>
                    </dsnews_news>
                    <dsnews_category translate="title" module="dsnews">
                        <title>Categories</title>
                        <sort_order>20</sort_order>
                        <action>dsnews_admin/adminhtml_category</action>
                    </dsnews_category>
                </children>
            </dsnews>
        </menu>
        <translate>
            <modules>
                <DS_News>
                    <files>
                        <default>DS_News.csv</default>
                    </files>
                </DS_News>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <adminhtml_news>
                                            <title>News Module Section</title>
                                        </adminhtml_news>
                                        <adminhtml_category>
                                            <title>News Categories Module Section</title>
                                        </adminhtml_category>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
